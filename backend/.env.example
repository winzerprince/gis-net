# ==================================================
# GIS-NET BACKEND ENVIRONMENT CONFIGURATION
# Copy this file to .env and update values for your environment
# ==================================================

# ==================================================
# SERVER CONFIGURATION
# ==================================================
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
DATABASE_URL=postgresql://beekeeper:password@localhost:5432/beehive

# Alternative database configuration (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=beehive
DB_USER=beekeeper
DB_PASSWORD=password

# ==================================================
# JWT AUTHENTICATION
# ==================================================
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ==================================================
# CORS & SECURITY
# ==================================================
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=1

# ==================================================
# RATE LIMITING
# ==================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
INCIDENT_RATE_LIMIT_MAX=5

# ==================================================
# LOGGING CONFIGURATION
# ==================================================
LOG_LEVEL=debug
LOG_TO_FILE=true

# ==================================================
# GEOCODING SERVICES
# ==================================================
# Nominatim (OpenStreetMap) - Free
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=gis-net-backend-dev

# Google Maps Geocoding API (Optional - requires API key)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
ENABLE_GOOGLE_GEOCODING=false

# ==================================================
# EXTERNAL SERVICES (OPTIONAL)
# ==================================================
# OpenWeatherMap API for weather data correlation
OPENWEATHER_API_KEY=your_openweather_api_key_here
ENABLE_WEATHER_DATA=false

# Traffic API integration (Optional)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
ENABLE_TRAFFIC_DATA=false

# ==================================================
# FILE UPLOAD & STORAGE
# ==================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=uploads/

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=gis-net-uploads
AWS_REGION=us-east-1
ENABLE_S3_UPLOAD=false

# ==================================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# ==================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@gis-net.local
ENABLE_EMAIL_NOTIFICATIONS=false

# ==================================================
# REDIS CONFIGURATION (OPTIONAL)
# For session storage and caching in production
# ==================================================
REDIS_URL=redis://localhost:6379
ENABLE_REDIS=false

# ==================================================
# MONITORING & ANALYTICS
# ==================================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Sentry Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here
ENABLE_SENTRY=false

# ==================================================
# DEVELOPMENT & TESTING
# ==================================================
ENABLE_API_DOCS=true
ENABLE_CORS_ALL_ORIGINS=true
MOCK_GEOCODING=false
DISABLE_AUTH_FOR_TESTING=false

# ==================================================
# SPATIAL DATA CONFIGURATION
# ==================================================
DEFAULT_SEARCH_RADIUS_KM=10
MAX_SEARCH_RADIUS_KM=100
DEFAULT_PAGINATION_LIMIT=50
MAX_PAGINATION_LIMIT=1000

# ==================================================
# INCIDENT MANAGEMENT
# ==================================================
AUTO_VERIFY_THRESHOLD=3
AUTO_RESOLVE_HOURS=24
ENABLE_DUPLICATE_DETECTION=true
DUPLICATE_DISTANCE_THRESHOLD_M=100

# ==================================================
# SECURITY SETTINGS
# ==================================================
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=15

# ==================================================
# PERFORMANCE TUNING
# ==================================================
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_TIMEOUT_MS=30000
CACHE_TTL_SECONDS=300

# ==================================================
# FEATURE FLAGS
# ==================================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_INCIDENT_CLUSTERING=true
ENABLE_HEATMAP_GENERATION=true
ENABLE_PREDICTIVE_ANALYSIS=false
ENABLE_COMMUNITY_VALIDATION=true
